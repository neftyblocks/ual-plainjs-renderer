{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "inlineSourceMap":true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "lib": ["esnext"],
  "include": [
    "src/"
  ]
}
